<div class="container mt-5">
  <h1 class="title">Plant a new photo in you garden album</h1>
  <div>
    <%= simple_form_for [@plant] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'button' %>
    <% end %>
  </div>
  <div class="text-center mt-5">
    <%= link_to "back to all plants", plants_path %>
  </div>
</div>
